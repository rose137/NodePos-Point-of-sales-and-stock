<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:spacing="16dp">

        <!-- Profil User -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardProfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:strokeColor="@color/babyblue"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Foto Profil -->
                <ImageView
                    android:id="@+id/imgProfil"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_user"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_circle"
                    android:padding="4dp"
                    android:contentDescription="Foto Profil"/>

                <!-- Info User -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtNama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rosa Fitriani"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333"/>

                    <TextView
                        android:id="@+id/txtJabatan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Administrator"
                        android:textSize="14sp"
                        android:textColor="@color/babyblue"/>

                    <TextView
                        android:id="@+id/txtEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="rosa@example.com"
                        android:textSize="13sp"
                        android:textColor="#666"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Kelola Akun -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardKelolaAkun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:clickable="true"
            android:focusable="true"
            app:strokeColor="@color/babyblue"
            app:strokeWidth="1dp"
            app:rippleColor="@color/babyblue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_user"
                    app:tint="@color/babyblue"
                    android:contentDescription="Kelola Akun" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Kelola Akun"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#4A4A4A"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Ganti Password -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardGantiPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:clickable="true"
            android:focusable="true"
            app:strokeColor="@color/babyblue"
            app:strokeWidth="1dp"
            app:rippleColor="@color/babyblue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="@color/babyblue"
                    android:src="@drawable/ic_password"
                    android:contentDescription="Ganti Password" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Ganti Password"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#4A4A4A"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Logout -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:clickable="true"
            android:focusable="true"
            app:strokeColor="@color/babyblue"
            app:strokeWidth="1dp"
            app:rippleColor="@color/babyblue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_logout"
                    app:tint="@color/babyblue"
                    android:contentDescription="Logout" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Logout"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#4A4A4A"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
