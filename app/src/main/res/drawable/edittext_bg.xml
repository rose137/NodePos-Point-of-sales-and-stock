<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna background -->
    <solid android:color="@android:color/white" />

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#FFA500" /> <!-- Orange misalnya -->

    <!-- Rounded corner -->
    <corners android:radius="8dp" />

    <!-- Padding dalam -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
